{
  "name": "tony-admin",
  "version": "0.7.1",
  "author": {
    "name": "crlang",
    "email": "crlang@163.com",
    "url": "https://github.com/crlang"
  },
  "scripts": {
    "bootstrap": "pnpm install",
    "serve": "npm run dev",
    "dev": "vite",
    "build": "cross-env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=8192 pnpm vite build",
    "build:site": "cross-env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=8192 pnpm vite build --mode site",
    "build:test": "cross-env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=8192 pnpm vite build --mode test",
    "build:no-cache": "pnpm clean:cache && npm run build",
    "preview": "npm run build && vite preview",
    "type:check": "vue-tsc --noEmit --skipLibCheck",
    "test:gzip": "npx http-server dist --cors --gzip -c-1",
    "test:br": "npx http-server dist --cors --brotli -c-1",
    "lint:eslint": "eslint --max-warnings 0  \"src/**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,ts,vue,tsx,html,md}\"",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,postcss,css,scss}\" --cache-location node_modules/.cache/stylelint/",
    "commit": "czg",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "reinstall": "rimraf pnpm-lock.yaml && rimraf package.lock.json && rimraf node_modules && npm run bootstrap",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@vueuse/core": "^10.4.1",
    "@zxcvbn-ts/core": "^3.0.4",
    "axios": "^1.5.0",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "element-plus": "^2.3.14",
    "intro.js": "^7.2.0",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0",
    "path-to-regexp": "^6.2.1",
    "pinia": "^2.1.6",
    "print-js": "^1.6.0",
    "qs": "^6.11.2",
    "resize-observer-polyfill": "^1.5.1",
    "vite-plugin-dts": "^3.5.3",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/fs-extra": "^11.0.2",
    "@types/lodash-es": "^4.17.9",
    "@types/node": "^20.6.3",
    "@types/nprogress": "^0.2.0",
    "@types/qs": "^6.9.8",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "async-validator": "^4.2.5",
    "conventional-changelog": "^4.0.0",
    "conventional-changelog-cli": "^3.0.0",
    "cross-env": "^7.0.3",
    "cz-git": "^1.7.1",
    "czg": "^1.7.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "fs-extra": "^11.1.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "picocolors": "^1.0.0",
    "pkg-types": "^1.0.3",
    "postcss": "^8.4.30",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.8",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.67.0",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "unplugin-vue-define-options": "^1.3.18",
    "vite": "^4.4.9",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "1.0.0-rc.4",
    "vue-component-meta": "^1.8.11",
    "vue-component-type-helpers": "^1.8.11",
    "vue-eslint-parser": "^9.3.1",
    "vue-tsc": "^1.8.11",
    "workbox-build": "^7.0.0",
    "workbox-window": "^7.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "prettier --write",
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crlang/vue-tony-admin.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crlang/vue-tony-admin/issues"
  },
  "homepage": "https://github.com/crlang/vue-tony-admin",
  "packageManager": "pnpm@8.5.0",
  "engines": {
    "node": ">=16.15.1",
    "pnpm": ">=8.1.0"
  }
}
